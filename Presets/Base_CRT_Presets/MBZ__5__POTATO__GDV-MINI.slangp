shaders = 9

shader0 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-add-params-potato.slang
alias0 = "CorePass"

shader1 =  ../../../../stock.slang // ../../shaders/HyperspaceMadness/hsm-guest/g-sharp_resampler.slang
filter_linear1 = false
srgb_framebuffer1 = true
scale_type1 = source
scale_x1 = 1
scale_y1 = 1
alias1 = "DerezedPass"

shader2 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-add-negative-crop-area.slang
filter_linear2 = false
mipmap_input2 = false
srgb_framebuffer2 = true
scale_type2 = source
scale_x2 = 1.25
scale_y2 = 1.25
alias2 = "CorePreppedPass"

shader3 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-cache-info-screen-scale-params.slang
filter_linear3 = false
scale_type3 = source
scale3 = 1.0
alias3 = "InfoCachePass"

shader4 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-intro-potato.slang
filter_linear4 = false
float_framebuffer4 = true
scale_type4 = source
scale4 = 1.0
alias4 = "IntroPass"

shader5 =  ../../shaders/HyperspaceMadness/hsm-guest/hsm-custom-fast-sharpen.slang // ../../shaders/HyperspaceMadness/hsm-guest/g-sharp_resampler.slang
filter_linear5 = false
srgb_framebuffer5 = true

// Color Correction with Dogway's awesome Grade shader
shader6 = ../../shaders/HyperspaceMadness/hsm-dogway/hsm-grade.slang

shader7 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-gdarius-gdv-mini.slang
scale_type7 = viewport
scale_x7 = 1.0
scale_y7 = 1.0
filter_linear7 = true

g_sat = 0.15

shader8 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-post-crt-potato.slang
alias8 = "MBZ_PostCRTPass"
// Define textures to be used by the different passes
