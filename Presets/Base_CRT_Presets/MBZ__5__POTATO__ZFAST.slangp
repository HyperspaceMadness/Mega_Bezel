shaders = 8

shader0 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-add-params-potato.slang

shader1 =  ../../../../stock.slang // ../../shaders/HyperspaceMadness/hsm-guest/g-sharp_resampler.slang
filter_linear1 = false
srgb_framebuffer1 = true
scale_type1 = source
scale_x1 = 1
scale_y1 = 1
alias1 = "DerezedPass"

shader2 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-add-negative-crop-area.slang
filter_linear2 = false
mipmap_input2 = false
srgb_framebuffer2 = true
scale_type2 = source
scale_x2 = 1.25
scale_y2 = 1.25
alias2 = "NegativeCropAddedPass"

shader3 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-info-cache.slang
filter_linear3 = true
float_framebuffer3 = true
scale_type3 = source
scale3 = 1.0
alias3 = "InfoCachePass"

shader4 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-intro-potato.slang
filter_linear4 = false
float_framebuffer4 = true
scale_type4 = source
scale4 = 1.0
alias4 = "IntroPass"

// Color Correction with Dogway's awesome Grade shader
shader5 = ../../shaders/HyperspaceMadness/hsm-dogway/hsm-grade.slang

shader6 = ../../shaders/HyperspaceMadness/hsm-zfast/hsm-zfast_crt.slang
scale_type6 = viewport
scale_x6 = 1.0
scale_y6 = 1.0
filter_linear6 = true

shader7 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-post-crt-potato.slang
alias7 = "MBZ_PostCRTPass"
// Define textures to be used by the different passes
textures = "ScreenPlacementImage;BackgroundImage;BackgroundVertImage"

ScreenPlacementImage = ../../shaders/HyperspaceMadness/textures/Placeholder_Transparent_16x16.png
ScreenPlacementImage_linear = false

BackgroundImage = ../../shaders/HyperspaceMadness/textures/Baked_Frame_Carbonfiber_Background.png
BackgroundImage_linear = true

BackgroundVertImage = ../../shaders/HyperspaceMadness/textures/Baked_Frame_Carbonfiber_Background_Vert.png
BackgroundVertImage_linear = true

// Parameters
HSM_ASPECT_RATIO_MODE = 1

