scale_x2 = 1.25
scale_y2 = 1.25
alias2 = "CorePreppedPass"

shader3 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-info-cache-screen-scale-params.slang
filter_linear3 = true
float_framebuffer3 = true
scale_type3 = source
scale3 = 1.0
alias3 = "InfoCachePass"

shader4 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-intro-potato.slang
filter_linear4 = false
float_framebuffer4 = true
scale_type4 = source
scale4 = 1.0
