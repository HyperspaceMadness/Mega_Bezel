filter_linear9 = true
scale_type9 = source
scale9 = 1.0
float_framebuffer9 = true
alias9 = "LinearizePass"

shader10 = ../../../shaders/fxaa/fxaa.slang
float_framebuffer10 = "true"

shader11 = ../../../shaders/guest/extras/hsm-screen-scale-g-sharp_resampler-no-reflect.slang
