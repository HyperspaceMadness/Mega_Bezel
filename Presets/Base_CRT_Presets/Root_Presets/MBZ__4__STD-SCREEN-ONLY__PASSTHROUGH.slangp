scale_type11 = "viewport"
scale11 = "1.0"
float_framebuffer11 = "true"
alias11 = "CRTPass"

shader12 = ../../../shaders/base/post-crt-prep-minimum-no-reflect.slang
mipmap_input12 = true
scale_type12 = viewport
float_framebuffer12 = true
alias12 = "PostCRTPass"

# Combine Passes ----------------------------------------------------------------
shader13 = ../../../shaders/base/output-sdr.slang
scale_type13 = viewport
alias13 = "OutputPass"

