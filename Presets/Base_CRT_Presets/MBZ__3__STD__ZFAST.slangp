shaders = 25

shader0 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-add-params-all.slang

shader1 =  ../../../../stock.slang // ../../shaders/HyperspaceMadness/hsm-guest/g-sharp_resampler.slang
filter_linear1 = false
srgb_framebuffer1 = true
scale_type1 = source
scale_x1 = 1
scale_y1 = 1

shader2 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-add-negative-crop-area.slang
filter_linear2 = false
mipmap_input2 = false
srgb_framebuffer2 = true
scale_type2 = source
scale_x2 = 1.25
scale_y2 = 1.25
alias2 = "DerezedPass"

shader3 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-info-cache.slang
filter_linear3 = true
float_framebuffer3 = true
scale_type3 = source
scale3 = 1.0
alias3 = "InfoCachePass"

shader4 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-intro-std.slang
filter_linear4 = false
float_framebuffer4 = true
scale_type4 = source
scale4 = 1.0
alias4 = "IntroPass"

shader5 =  ../../shaders/HyperspaceMadness/hsm-guest/hsm-custom-fast-sharpen.slang // ../../shaders/HyperspaceMadness/hsm-guest/g-sharp_resampler.slang
filter_linear5 = false
srgb_framebuffer5 = true

// Color Correction with Dogway's awesome Grade shader
shader6 = ../../shaders/HyperspaceMadness/hsm-dogway/hsm-grade.slang

shader7 = ../../../../stock.slang
alias7 = "PreCRTPass"

shader8 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-afterglow0.slang
filter_linear8 = false
scale_type8 = source
scale8 = 1.0
alias8 = "AfterglowPass"

shader9 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-pre-shaders-afterglow.slang
filter_linear9 = false
scale_type9 = source
mipmap_input9 = true
scale9 = 1.0
alias9 = "PrePass"

shader10 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-avg-lum.slang
filter_linear10 = true
scale_type10 = source
scale10 = 1.0
mipmap_input10 = true
alias10 = "AvgLumPass"

// Pass referenced by subsequent blurring passes and crt pass
shader11 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-interlace-and-linearize.slang
filter_linear11 = true
scale_type11 = source
scale11 = 1.0
alias11 = "LinearizePass"
float_framebuffer11 = true

shader12 = ../../shaders/HyperspaceMadness/hsm/hsm-delinearize.slang

shader13 = ../../shaders/HyperspaceMadness/hsm-zfast/hsm-zfast_crt.slang
scale_type13 = viewport
scale_x13 = 1.0
scale_y13 = 1.0
filter_linear13 = true

shader14 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-deconvergence.slang
filter_linear14 = true
scale_type14 = viewport
scale_x14 = 1.0
scale_y14 = 1.0

shader15 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-post-crt.slang
alias15 = "MBZ_PostCRTPass"

// Reduce Resolution  ----------------------------------------------------------------
//      Reduce the resolution to a small static size regardless of final resolution
//      Allows consistent look and faster at different final resolutions for blur
//      Mipmap option allows downscaling without artifacts
shader16 = ../../shaders/HyperspaceMadness/hsm/hsm-linearize-crt.slang
mipmap_input16 = true
filter_linear16 = true
scale_type16 = absolute
// scale_x16 = 480
// scale_y16 = 270
// scale_x16 = 960
// scale_y16 = 540
scale_x16 = 800
scale_y16 = 600
alias16 = "BR_MirrorLowResPass"

// Add Blur for the Reflection (Horizontal) ----------------------------------------------------------------
shader17 = ../../shaders/HyperspaceMadness/hsm/hsm-blur-outside-screen-horiz.slang
mipmap_input17 = true
filter_linear17 = true

// Add Blur for the Reflection (Vertical) ----------------------------------------------------------------
shader18 = ../../shaders/HyperspaceMadness/hsm/hsm-blur-outside-screen-vert.slang
filter_linear18 = true
alias18 = "BR_MirrorBlurredPass"

// Reduce resolution ----------------------------------------------------------------
// Reduced to a very small amount so we can create a blur which will create a glow from the screen
//      Mipmap option allows smoother downscaling
shader19 = ../../../../blurs/blur9x9.slang
mipmap_input19 = true
filter_linear19 = true
scale_type19 = absolute
scale_x19 = 128
scale_y19 = 128
alias19 = "BR_MirrorReflectionDiffusedPass"

// Add Diffused glow all around the screen ----------------------------------------------------------------
//      Blurred so much that it's non directional
//      Mipmap option allows downscaling without artifacts
shader20 = ../../../../blurs/blur9x9.slang
mipmap_input20 = true
filter_linear20 = true
scale_type20 = absolute
scale_x20 = 12
scale_y20 = 12
alias20 = "BR_MirrorFullscreenGlowPass"

// Bezel Reflection ----------------------------------------------------------------
shader21 = ../../shaders/HyperspaceMadness/hsm/hsm-bezel-reflection.slang
scale_type21 = viewport
float_framebuffer21 = true
alias21 = "BR_CRTAndReflectionPass"

// Bezel Generation & Composite of Image Layers ----------------------------------------------------------------

shader22 = ../../shaders/HyperspaceMadness/hsm/hsm-bezel-images-under-crt.slang
filter_linear22 = true
scale_type22 = viewport
float_framebuffer22 = true
alias22 = "BR_LayersUnderCRTPass"

shader23 = ../../shaders/HyperspaceMadness/hsm/hsm-bezel-images-over-crt.slang
filter_linear23 = true
scale_type23 = viewport
float_framebuffer23 = true
alias23 = "BR_LayersOverCRTPass"

// Combine Passes ----------------------------------------------------------------
shader24 = ../../shaders/HyperspaceMadness/hsm/hsm-combine-passes.slang
scale_type24 = viewport
float_framebuffer24 = true
alias24 = "CombinePass"
// Define textures to be used by the different passes
textures = "SamplerLUT1;SamplerLUT2;SamplerLUT3;SamplerLUT4;IntroImage;ScreenPlacementImage;ColoredGelImage;TubeStaticReflectionImage;BackgroundImage;BackgroundVertImage;ReflectionMaskImage;FrameTextureImage;CabinetGlassImage;DeviceImage;DeviceVertImage;DecalImage;NightLightingImage;LEDImage;TopLayerImage;"

