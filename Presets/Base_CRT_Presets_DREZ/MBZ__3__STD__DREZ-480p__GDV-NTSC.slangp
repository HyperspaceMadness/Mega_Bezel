scale_type3 = source
scale3 = 1.0
alias3 = "InfoCachePass"

shader4 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-intro-std.slang
filter_linear4 = false
float_framebuffer4 = true
scale_type4 = source
scale4 = 1.0
alias4 = "IntroPass"

shader5 = ../../../../stock.slang
alias5 = "PreCRTPass"

shader6 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-afterglow0.slang
filter_linear6 = true
scale_type6 = source
scale6 = 1.0
alias6 = "AfterglowPass"

shader7 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-pre-shaders-afterglow.slang
filter_linear7 = true
scale_type7 = source
mipmap_input7 = true
scale7 = 1.0

// Color Correction with Dogway's awesome Grade shader
// Grade is after Afterglow so that brightening the black level does not break the afterglow
shader8 = ../../shaders/HyperspaceMadness/hsm-dogway/hsm-grade.slang
filter_linear8 = true
scale_type8 = source
scale8 = 1.0
alias8 = "PrePass0"

shader9 = ../../shaders/HyperspaceMadness/hsm-guest/ntsc/hsm-ntsc-pass1.slang
filter_linear9 = false
scale_type_x9 = source
scale_type_y9 = source
scale_x9 = 4.0
scale_y9 = 1.0
frame_count_mod9 = 2
float_framebuffer9 = true

shader10 = ../../shaders/HyperspaceMadness/hsm-guest/ntsc/hsm-ntsc-pass2.slang
filter_linear10 = false
scale_type10 = source
scale_x10 = 0.5
scale_y10 = 1.0

shader11 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-custom-fast-sharpen.slang
filter_linear11 = true
scale_type11 = source
scale_x11 = 1.0
scale_y11 = 1.0
alias11 = NtscPass

shader12 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-convert-ntsc.slang
