filter_linear14 = true
scale_type14 = source
scale14 = 1.0
mipmap_input14 = true
alias14 = "AvgLumPass"

// Pass referenced by subsequent blurring passes and crt pass
shader15 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-interlace-and-linearize.slang
filter_linear15 = true
scale_type15 = source
scale15 = 1.0
float_framebuffer15 = true
alias15 = "LinearizePass"

shader16 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-gaussian_horizontal.slang
filter_linear16 = true
scale_type_x16 = absolute
scale_x16 = 640.0
scale_type_y16 = source
scale_y16 = 1.0 
float_framebuffer16 = true

shader17 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-gaussian_vertical.slang
filter_linear17 = true
scale_type_x17 = absolute
scale_x17 = 640.0
scale_type_y17 = absolute
scale_y17 = 480.0
float_framebuffer17 = true
alias17 = GlowPass

shader18 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-bloom_horizontal.slang
filter_linear18 = true
scale_type_x18 = source
scale_x18 = 1.0
scale_type_y18 = source
scale_y18 = 1.0
float_framebuffer18 = true

shader19 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-bloom_vertical.slang
filter_linear19 = true
scale_type_x19 = source
scale_x19 = 1.0
scale_type_y19 = source
scale_y19 = 1.0
float_framebuffer19 = true
alias19 = BloomPass

shader20 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-crt-guest-advanced-ntsc.slang
filter_linear20 = true
scale_type20 = viewport
scale_x20 = 1.0
scale_y20 = 1.0

shader21 = ../../shaders/HyperspaceMadness/hsm-guest/hsm-deconvergence.slang
filter_linear21 = true
scale_type21 = viewport
scale_x21 = 1.0
scale_y21 = 1.0

shader22 = ../../shaders/HyperspaceMadness/hsm/hsm-prep-post-crt-image-layers.slang
alias22 = "MBZ_PostCRTPass"

// Reduce Resolution  ----------------------------------------------------------------
//      Reduce the resolution to a small static size regardless of final resolution
//      Allows consistent look and faster at different final resolutions for blur
//      Mipmap option allows downscaling without artifacts
shader23 = ../../shaders/HyperspaceMadness/hsm/hsm-linearize-crt.slang
mipmap_input23 = true
filter_linear23 = true
scale_type23 = absolute
// scale_x23 = 480
// scale_y23 = 270
// scale_x23 = 960
// scale_y23 = 540
scale_x23 = 800
scale_y23 = 600
alias23 = "BR_MirrorLowResPass"

// Add Blur for the Reflection (Horizontal) ----------------------------------------------------------------
shader24 = ../../shaders/HyperspaceMadness/hsm/hsm-blur-outside-screen-horiz.slang
mipmap_input24 = true
filter_linear24 = true

// Add Blur for the Reflection (Vertical) ----------------------------------------------------------------
shader25 = ../../shaders/HyperspaceMadness/hsm/hsm-blur-outside-screen-vert.slang
filter_linear25 = true
alias25 = "BR_MirrorBlurredPass"

// Reduce resolution ----------------------------------------------------------------
// Reduced to a very small amount so we can create a blur which will create a glow from the screen
//      Mipmap option allows smoother downscaling
shader26 = ../../../../blurs/blur9x9.slang
mipmap_input26 = true
filter_linear26 = true
scale_type26 = absolute
scale_x26 = 128
scale_y26 = 128
alias26 = "BR_MirrorReflectionDiffusedPass"

// Add Diffused glow all around the screen ----------------------------------------------------------------
//      Blurred so much that it's non directional
//      Mipmap option allows downscaling without artifacts
shader27 = ../../../../blurs/blur9x9.slang
mipmap_input27 = true
filter_linear27 = true
scale_type27 = absolute
scale_x27 = 12
scale_y27 = 12
alias27 = "BR_MirrorFullscreenGlowPass"

// Bezel Reflection ----------------------------------------------------------------
shader28 = ../../shaders/HyperspaceMadness/hsm/hsm-reflection.slang
scale_type28 = viewport
float_framebuffer28 = true
alias28 = "BR_CRTAndReflectionPass"

// Bezel Generation & Composite of Image Layers ----------------------------------------------------------------

shader29 = ../../shaders/HyperspaceMadness/hsm/hsm-bezel-images-under-crt.slang
filter_linear29 = true
scale_type29 = viewport
float_framebuffer29 = true
alias29 = "BR_LayersUnderCRTPass"

shader30 = ../../shaders/HyperspaceMadness/hsm/hsm-bezel-images-over-crt.slang
filter_linear30 = true
scale_type30 = viewport
float_framebuffer30 = true
alias30 = "BR_LayersOverCRTPass"

// Combine Passes ----------------------------------------------------------------
shader31 = ../../shaders/HyperspaceMadness/hsm/hsm-combine-passes.slang
scale_type31 = viewport
float_framebuffer31 = true
alias31 = "CombinePass"
